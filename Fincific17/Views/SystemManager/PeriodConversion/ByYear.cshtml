@model Fincific17.Models.PeriodConversionListModel

@{
    ViewBag.Title = "ByYear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ByYear</h2>
<div id="filtercriteria">
    <table><tr><td>@Html.DisplayNameFor(model => model.FilterYear)</td><td>@Html.DropDownListFor(model => model.FilterYear.ToString(),Model.AvailableYears.Select(s=>new SelectListItem() { Value = s.ToString(), Text = s.ToString() }))</td></tr></table>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.PeriodConversionList.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].FiscalYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].FiscalPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].ThruDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].GlClosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].ApClosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodConversionList[0].ArClosed)
            </th>
            <th></th>
        </tr>

        @foreach (Fincific17.Models.PeriodConversionModel item in Model.PeriodConversionList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FiscalYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FiscalPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThruDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlClosed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApClosed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArClosed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else
{
    <table><tr><td>No data to display</td></tr></table>
}
