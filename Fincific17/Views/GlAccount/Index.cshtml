@model Fincific17.Models.GlAccountListModel
@{
	var m = new Fincific17.Models.GlAccountModel();
 }

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => m.Number)
		</th>
		<th>
			@Html.DisplayNameFor(model => m.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => m.AccountType)
		</th>
		<th>
			@Html.DisplayNameFor(model => m.BalanceType)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model.GlAccountList) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Number)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Description)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.AccountType)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.BalanceType)
		</td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
			@Html.ActionLink("Details", "Details", new { id=item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id=item.Id })
		</td>
	</tr>
}

</table>
